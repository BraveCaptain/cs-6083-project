<!DOCTYPE html>
<html lang="en">

<head>

  {{include '../common/header.art'}}
  <title>WDS {{adminid}} Add Policy</title>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>

 
  <meta name="author" content="">

  <!--
  <script>
    function registerHome() {
      var res = formContentToJson($("#registerForm"));
      //if user did not enter userid or password
      return validateHomeInput(res);
    }
  </script>
  -->

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../common/supersidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../common/supertopbar.art'}}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Add New Policy</h1>
          </div>

          <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Fill in New Policy Information</h1>
                            </div>

                            <form method="post" id="registerForm">

                                <div class="form-group row">
                                    <div class="col-sm-5 mb-3 mb-sm-0">
                                        <label class=""> <b>Policy Name</b> </label>
                                    </div>
                                    <div class="col-sm-7">
                                        <input name="policyname" class="form-control" id="policyname" placeholder="Policy Name"
                                        type="text">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-5 mb-3 mb-sm-0">
                                        <label class=""> <b>Policy Type</b> </label>
                                    </div>
                                    <div class="col-sm-7">
                                        <select name="type" id="type" class="form-control">
                                            <option value="" selected disabled> -Please Select- </option>
                                            <option value="A">Auto Policy</option>
                                            <option value="H">Home Policy</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-5 mb-3 mb-sm-0">
                                        <label class=""> <b>Policy Amount per Month</b> </label>
                                    </div>
                                    <div class="col-sm-7">
                                        <input name="amount" class="form-control" id="amount" placeholder="Policy Amount per Month"
                                        type="number">
                                    </div>
                                </div>

                                <input type="submit" href="dashboard" class="btn btn-primary btn-user btn-block"
                                    value="Register" onclick="return registerHome()">
                                <hr>
                            </form>
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>


          



        

        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../common/footer.art'}}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


</body>