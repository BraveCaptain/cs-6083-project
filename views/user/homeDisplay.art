<!DOCTYPE html>
<html lang="en">

<head>

  {{include '../common/header.art'}}
  <title>WDS {{userid}} Home Display</title>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/chart-area-demo.js"></script>
  <script src="/js/demo/chart-pie-demo.js"></script>
  <meta name="author" content="">

  <!--
  <script>
    function registerHome() {
      var res = formContentToJson($("#registerForm"));
      //if user did not enter userid or password
      return validateHomeInput(res);
    }
  </script>
  -->

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    {{include '../common/sidebar.art'}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {{include '../common/topbar.art'}}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->

        <!-- Page Heading -->          

        <div class="container-fluid">
        <table class="table table-striped table-bordered table-hover custom-table">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">Registered Home Information from {{userid}}</h1>
          </div>
          <!-- DataTales Example -->

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">



          <thead>
            <tr>
              <th>Home ID In WDS</th>
              <th>Home Name</th>
              <th>Home Purchase Date</th>
              <th>Home Purchase Value</th>
              <th>Home Area (Sq. Ft.)</th>
              <th>Home Type</th>
              <th>Auto Fire Notification</th>
              <th>Home Security System</th>
              <th>Swimming Pool</th>
              <th>Basement</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Home ID In WDS</th>
              <th>Home Name</th>
              <th>Home Purchase Date</th>
              <th>Home Purchase Value</th>
              <th>Home Area (Sq. Ft.)</th>
              <th>Home Type</th>
              <th>Auto Fire Notification</th>
              <th>Home Security System</th>
              <th>Swimming Pool</th>
              <th>Basement</th>
            </tr>
          </tfoot>
          <tbody>
            {{each homeInfo}}

            <tr>
              <td>{{$value.homeid}}</td>
              <td>{{$value.homename}}</td>
              <td>{{$value.purchasedate}}</td>
              <td>${{$value.purchasevalue}}</td>
              <td>{{$value.area}}</td>
              <td>{{$value.type}}</td>
              <td>{{$value.autofirenotification}}</td>
              <td>{{$value.securitysystem}}</td>
              <td>{{$value.swimmingpool}}</td>
              <td>{{$value.basement}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        </div>
        </div>


          



        

        <!-- /.container-fluid -->
      </div>
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      {{include '../common/footer.art'}}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


</body>